// 综合测试文件 - 包含各种错误和警告

// 错误示例：
// 1. 函数名称不符合蛇形命名规范（警告）
fn BadFunctionName(param: String);   // 应该是 bad_function_name

// 2. 节点名称不符合大驼峰命名规范（警告）
node badNodeName {                   // 应该是 BadNodeName
    text: "这是一个错误的节点"
} -> NonExistentNode                // 错误：节点不存在

// 3. 调用不存在的函数（错误）
node TestNode {
    text: "测试文本"
    events: [
        0, unknown_function("test")   // 错误：函数不存在
        5, BadFunctionName("arg1", "arg2")  // 错误：参数数量错误 (期望1个参数)
    ]
}

// 4. 函数未使用（警告）
fn unused_function() -> String;      // 警告：函数已声明但未使用

// 正确的示例：
fn play_sound(file_name: String);    // 正确的蛇形命名
fn get_text() -> String;            // 将在文本插值中使用

node CorrectNode {                   // 正确的大驼峰命名
    text: "正确的文本：{get_text()}"   // 使用文本插值
    events: [
        0, play_sound("sound.wav")    // 正确的函数调用
    ]
}